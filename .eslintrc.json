{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier", "unused-imports"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "tabWidth": 2
      }
    ],
    "no-plusplus": "off",
    "import/extensions": "off",
    "no-restricted-syntax": "off"
  }
}
